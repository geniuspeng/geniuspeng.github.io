.post
  position relative
  width 80%
  max-width 750px
  margin 2.5rem auto 
  padding-bottom 2.5rem
  border-bottom #ebf2f6 1px solid
  word-wrap break-word
  &:after 
    display block
    content ""
    width 7px
    height 7px
    border #e7eef2 1px solid
    position absolute
    bottom -5px
    left 50%
    margin-left -5px
    background #fff
    border-radius 100%
    box-shadow #fff 0 0 0 5px
  .post-title
    color #2E2E2E
    line-height 1.15em
    margin 0 0 0.4em 0
    font-family "Open Sans", sans-serif
    text-rendering geometricPrecision
    font-size 2.25rem
    a
      text-decoration none
      color #4a4a4a
      transition color 0.3s ease
      background-color transparent
  .post-excerpt
    p
      margin 0
      font-size 1.1rem
      line-height 1.8rem
      text-align justify
  .post-meta 
    display flex
    margin 1.1rem 0 0 0
    font-family "Open Sans", sans-serif
    font-size 1rem
    line-height 1.375rem
    color #9eabb3

.post-content
  overflow hidden
  p 
    margin-top 10px
  p code,li code 
    padding 1px 3px
    margin 0 3px
    background #ddd
    border 1px solid #ccc
    font-family Menlo,Monaco,"Andale Mono","lucida console","Courier New",monospace
    word-wrap break-word
  blockquote 
    background #ddd
    border-left 5px solid #ccc
    padding 15px 20px
    margin-top 10px
    border-left 5px solid #657b83
    background #f6f6f6
    p
      margin-top 0
  em
    font-style italic
  ul li 
      &:before 
        content ""
        width 6px
        height 6px
        border 1px solid #999
        border-radius 10px
        background #aaa
        display inline-block
        margin-right 10px
        float left
        margin-top 12px
  ul,ol 
    font-size 14px
    margin 10px 0px
  h2 
    margin-top 20px
    font-weight bolder
    color #574c4c
    padding-bottom 5px
    border-bottom 1px solid #ddd
  h3 
    margin-top 10px
    font-weight bolder
    color #574c4c
    padding-bottom 5px
    border-bottom 1px solid #ddd
  h4,h5,h6 
    font-weight bolder
    color #574c4c
  video 
    max-width 100%
  strong 
    font-weight bolder
  .caption 
    display block
    font-size 0.8em
    color #aaa
  hr 
    height 0
    margin-top 20px
    margin-bottom 20px
    border-left 0
    border-right 0
    border-top 1px solid #ddd
    border-bottom 1px solid #fff
  pre 
    font-size 1 / 0.9em
    line-height 1.5
    margin-top 10px
    padding 5px 15px
    overflow-x auto
    color #657b83
    font-size 10px
    border 1px solid #ccc
    font-family Menlo,Monaco,"Andale Mono","lucida console","Courier New",monospace
  table 
    width 100%
    border 1px solid #dedede
    margin 15px 0
    border-collapse collapse
    tr,td 
      height 35px
    td,th 
      border 1px solid #dedede
      padding 0 10px
    thead tr 
      background #f8f8f8
    tbody tr:hover
      background #efefef


      
