/************************************************************************************
主页面style
*************************************************************************************/
html.fixed-top
  padding-top 3.25rem
#menu-outer
  position fixed
  top 0
  left 0
  right 0
  z-index 30
  background-color white
  min-height 3.25rem
  .bd-special-shadow 
    background-image linear-gradient(rgba(0, 0, 0, 1), transparent)
    height 8px
    left 0
    position absolute
    right 0
    top 100%
    transform scaleY(0)
    transform-origin center top
.container
  margin 0 auto 
  position relative 
nav#menu-inner
  align-items stretch
  display flex
  justify-content space-between
  min-height 3.25rem
  width 100%
  .navbar-menu 
    display none
  .navbar-item 
    flex-grow 0
    flex-shrink 0
  .navbar-item, .navbar-link 
    color #4a4a4a
    display block
    line-height 1.5
    padding 0.5rem 1rem
    position relative
  .navbar-brand
    align-items stretch
    display flex
    flex-shrink 0
    min-height 3.25rem
    .navbar-burger 
      cursor pointer
      display block
      height 3.25rem
      position relative
      width 3.25rem
      margin-left auto
      &:hover 
        background-color rgba(0, 0, 0, 0.05)

.slider
  background blue
  width 100% 
  height 40vw
  max-height 590px
.magic-link
  display flex
  flex-wrap wrap
  justify-content space-between
  align-content space-between
  .link-item
    width 33%
    // width 33vw
    height 20vw
    max-height 290px
    min-height 150px
    &.red
      background red
    &.green
      background green
    &.blue
      background blue 
    &.grey
      background grey
    &.yellow 
      background yellow
    &.orange
      background orange
    







/*滚动条 样式*/
::-webkit-scrollbar 
  width 5px
  height 5px
::-webkit-scrollbar-button 
  &:vertical 
    display none
::-webkit-scrollbar-track 
  &:vertical 
    background-color black
::-webkit-scrollbar-track-piece 
  background #eaeaea
::-webkit-scrollbar-thumb 
  &:vertical 
    background-color #d1ab73
    border-radius 4px
    &:hover 
      background-color #c49e66
::-webkit-scrollbar-corner 
  &:vertical 
    background-color #535353
::-webkit-scrollbar-resizer 
  &:vertical 
    background-color #ff6e00
