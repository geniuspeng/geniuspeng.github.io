@media only screen and (max-width: 900px)
  .post 
    font-size 0.95em
    .post-title
      font-size 2rem
  .panel 
    .panel-item
      width 33.3%
@media screen and (max-width: 767px)
  .panel
    padding 0
    .panel-item
      width 50%
@media screen and (max-width: 550px)
  .magic-link
    .link-item
      width 49.5%
      height 20vw
      max-height 290px
      min-height 150px
  .post 
    width auto
    margin-top 2rem
    margin-bottom 2rem
    margin-left 16px
    margin-right 16px
    padding-bottom 2rem
    line-height 1.65em
    .post-title
      font-size 1.26rem
    .post-excerpt p
      font-size .9rem
      line-height 1.5rem
    .post-meta
      font-size .82rem
      margin-top .625rem
  .panel
    .panel-large-item
      width 100%
@media screen and (max-width: 480px)
  .panel
    .panel-item
      width 100%
