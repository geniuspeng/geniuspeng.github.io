.panel
  background-color beige
  border-radius 6px
  padding 20px 20px
  margin-bottom 42px
  width 100%
  margin-right auto
  margin-left auto
  .panel-title 
    padding 8px 12px
    display inline-block
    margin-bottom 16px
    font-size 14px
    font-weight 200
    color #ffffff
    background #d1ab79
    margin-left 12px
  .panel-body
    padding 0
    display flex
    flex-wrap wrap
    justify-content flex-start
    .card 
      &:hover 
        box-shadow 0 30px 28px -16px rgba(0, 0, 0, 0.26)
        transform translate(0, -4px)
  .panel-item
    width 20%
    position relative
    padding-left 10px
    padding-right 10px
  .panel-large-item
    width 33%
    position relative
    padding-left 10px
    padding-right 10px  
.card 
  background #fafafa
  margin-bottom 20px
  border-radius 3px
  margin-left 2px
  margin-right 2px
  position relative
  overflow hidden
  border-bottom 1px solid #e5e5e5
  transition all .2s
  .card-heading 
    overflow hidden
    margin-bottom 7px
    display block
    cursor pointer
    padding 10px 18px 0
    color #333
    .card-title 
      display block
      padding-left 40px
      margin-top 6px
      font-weight 800
      font-size 14px
      color inherit
      white-space nowrap
    .card-icon 
      width 32px
      height 32px
      border-radius 32px
      float left
      display block
      img
        display block
        width 100%
        height 100%
        border-radius 32px
        
  .card-body 
    color rgba(102, 102, 102, 0.55)
    font-size 12px
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    margin-bottom 2px
    padding 0 18px
  .card-footer
    padding 0 18px 8px
    
.tool-bg 
  background-image url(../images/material/bg01.jpg)
  background-repeat no-repeat
  background-size cover
#texts 
  text-align center
  padding-top 15%
  font-size 20px
  color rgb(255, 255, 255)
  font-weight 200
#textse 
  text-align center
  padding-top 4%
  font-size 12px
  color #c5c5c5
  font-weight 200
#local 
  display inline-block
  box-sizing border-box
  width 23%
  margin-right 35%
  margin-left 39%
  margin-top 8%
  cursor pointer
  background-color rgba(255, 255, 255, 0.42)
  border-radius 100px
  text-align center
  text-decoration none
  padding 7px 24px
  color #000000
  font-size .55rem
.local 
  width 100%
  background #4084d0
  color #fff
  margin-bottom 10px

.tool
  margin-bottom 27px
  .tool-imgs 
    height 233px
    transition all .4s
    border-radius 4px


